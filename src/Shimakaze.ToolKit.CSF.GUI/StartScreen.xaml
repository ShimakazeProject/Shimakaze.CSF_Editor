<Fluent:StartScreen
    x:Class="Shimakaze.ToolKit.CSF.GUI.StartScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Fluent="urn:fluent-ribbon"
    xmlns:cmd="clr-namespace:Shimakaze.ToolKit.CSF.GUI.Commands"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:local="clr-namespace:Shimakaze.ToolKit.CSF.GUI"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:l18n="clr-namespace:Shimakaze.ToolKit.CSF.GUI.Strings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Instance"
    d:DesignHeight="450"
    d:DesignWidth="800"
    CloseOnEsc="False"
    IsOpen="True"
    mc:Ignorable="d">
    <Fluent:StartScreen.InputBindings>
        <KeyBinding
            Key="Esc"
            x:Name="EscKey"
            Command="{x:Static cmd:HideStartScreenCommand.Instance}" />
    </Fluent:StartScreen.InputBindings>
    <Fluent:StartScreenTabControl>
        <Fluent:StartScreenTabControl.LeftContent>
            <materialDesign:TransitioningContent
                x:Name="left"
                Opacity="1"
                OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromLeft}"
                RunHint="All">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        FontSize="48"
                        Foreground="{DynamicResource Fluent.Ribbon.Brushes.IdealForegroundColorBrush}"
                        Text="Start" />
                    <Grid Grid.Row="1" Margin="10,20,10,0">
                        <Grid.Resources>
                            <Style BasedOn="{StaticResource ButtonAccentRevealStyle}" TargetType="Button">
                                <Setter Property="FontSize" Value="18" />
                                <Setter Property="Margin" Value="5" />
                                <Setter Property="Padding" Value="5" />
                                <Setter Property="BorderThickness" Value="2" />
                            </Style>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <Button x:Name="btnOpen" Command="{x:Static cmd:OpenFileCommand.Instance}" Content="{x:Static l18n:Resources.UI_OpenFile}" />
                            <Button CommandParameter="{Binding ElementName=this}" Content="{x:Static l18n:Resources.UI_NewFile}" />
                            <Button CommandParameter="{Binding ElementName=this}" Content="{x:Static l18n:Resources.UI_Import}" />
                            <Button Content="XXX" />
                        </StackPanel>
                        <StackPanel Grid.Row="1">
                            <Button x:Name="btnExit" Content="{x:Static l18n:Resources.UI_ExitApplication}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </materialDesign:TransitioningContent>
        </Fluent:StartScreenTabControl.LeftContent>

        <Fluent:StartScreenTabControl.RightContent>
            <materialDesign:TransitioningContent
                x:Name="right"
                Opacity="1"
                OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromRight}"
                RunHint="All">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                            You can close the start screen by either clicking the button below or by pressing ESC
                        </TextBlock>
                    </StackPanel>


                    <Fluent:RibbonScrollViewer
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalScrollBarVisibility="Auto">
                        <ListView>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <TextBlock Text="内容" />
                                        <Button Content="×" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Fluent:RibbonScrollViewer>

                    <TextBlock
                        Grid.Row="2"
                        Padding="16"
                        HorizontalAlignment="Center"
                        FontSize="18">
                        <Hyperlink x:Name="NothingLink" Command="{x:Static cmd:HideStartScreenCommand.Instance}">
                            <Hyperlink.Style>
                                <Style TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Accent}" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Gray.MouseOver}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Hyperlink.Style>
                            <TextBlock Text="{x:Static l18n:Resources.UI_StartScreen_Continue}" />
                        </Hyperlink>
                    </TextBlock>
                </Grid>
            </materialDesign:TransitioningContent>
        </Fluent:StartScreenTabControl.RightContent>
    </Fluent:StartScreenTabControl>

</Fluent:StartScreen>
