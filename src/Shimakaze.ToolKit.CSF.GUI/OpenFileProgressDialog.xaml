<fluent:AcrylicWindow
    x:Class="Shimakaze.ToolKit.CSF.GUI.OpenFileProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fluent="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:local="clr-namespace:Shimakaze.ToolKit.CSF.GUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Loading..."
    ResizeMode="NoResize"
    WindowStyle="None"
    ShowInTaskbar="False"
    Width="200"
    Height="100"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding StatusString, Mode=OneWay}" />
        <ProgressBar
            Grid.Row="1"
            IsIndeterminate="{Binding UnknowProgress, Mode=OneWay}"
            Maximum="{Binding MaxProgress, Mode=OneWay}"
            Value="{Binding Progress, Mode=OneWay}" />
        <Button
            Grid.Row="2"
            Click="Button_Click"
            Content="取消"
            Style="{DynamicResource ButtonRevealStyle}" />
    </Grid>
</fluent:AcrylicWindow>
