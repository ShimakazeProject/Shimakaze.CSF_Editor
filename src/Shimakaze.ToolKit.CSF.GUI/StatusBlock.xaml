<UserControl
    x:Class="Shimakaze.ToolKit.CSF.GUI.StatusBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Shimakaze.ToolKit.CSF.GUI"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource MahApps.Brushes.Flyout.Background}">
        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect ExpandIn}">
            <StackPanel VerticalAlignment="Center">
                <mah:ProgressRing x:Name="ProgressRing" Margin="16" Visibility="Collapsed"/>
                <mah:MetroProgressBar x:Name="ProgressBar" Margin="16" Width="200"/>
                <TextBlock x:Name="TextBlock" FontSize="36" HorizontalAlignment="Center"/>
                <Button x:Name="Button" Margin="16" Style="{DynamicResource ButtonRevealStyle}" Padding="16 4" HorizontalAlignment="Center"/>
            </StackPanel>
        </materialDesign:TransitioningContent>
    </Grid>
</UserControl>
